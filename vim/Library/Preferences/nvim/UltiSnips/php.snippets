snippet if "if"
if (${1:true}) {
    ${VISUAL}$0
}
endsnippet

snippet ife "if else"
if (${1:true}) {
    ${VISUAL}$0
} else $3 {
    ${VISUAL}$2
}
endsnippet

snippet switch "switch"
switch (${1:condition}) {
    case $0:
      ${VISUAL}$2
      break

    default:
      ${VISUAL}$3
}
endsnippet

snippet try "try"
try {
    ${VISUAL}$0
} catch(\Exception $e) {
    ${VISUAL}$1
}
endsnippet
