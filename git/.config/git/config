[user]
	name = mcchrish
	email = mcchrish@gmail.com
	signingkey = 2F13B6AE9F19E530
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true

[credential]
	helper = osxkeychain

[core]
	editor = nvim +startinsert
	autocrlf = false
	pager = less
	ignorecase = false

[pull]
	rebase = true

[push]
	default = upstream

[merge]
	tool = vimdiff

[rebase]
	autosquash = true
	autostash  = true

[mergetool]
	prompt = false
	path = nvim

[diff]
	tool = vimdiff
	algorithm = patience

[pager]
	diff = diff-so-fancy | less
	show = diff-so-fancy | less

[color]
	ui = always
	diff = auto
	branch = auto
	interactive = auto
	status = auto

[color "diff"]
	meta = bold yellow
	old  = bold red
	new  = bold green

[color "diff-highlight"]
	oldNormal = bold red
	oldHighlight = "black bold red"
	newNormal = bold green
	newHighlight = "black bold green"

[color "status"]
	untracked = magenta

[alias]
	edit = "!nvim `git ls-files -m`"
	# the acronym stands for "subtree add"
	sba = "!f() { git subtree add --prefix $1 $2 master --squash; }; f"
	# the acronym stands for "subtree update"
	sbu = "!f() { git subtree pull --prefix $1 $2 master --squash; }; f"

[commit]
	gpgsign = true
